[Unit]
Description=Log Forwarder
After=systemd-journald.service
Requires=systemd-journald.service

[Service]
ExecStart=/home/pi/pi-log-forwarder
TimeoutStartSec=0
Restart=on-failure
RestartSec=5s
Environment=CLOUDMQTT_URL=<< .CLOUDMQTT_URL >>
Environment=LOG_FORWARDER_SYSTEMD_UNIT=<< .LOG_FORWARDER_SYSTEMD_UNIT >>

[Install]
WantedBy=multi-user.target
